            else if (mouse_y &lt; y - 16) yy = y - 32; 
            else yy = y; 
       
            // Kill adjacent humans
            kill = false;
            for (i = 0; i &lt; 3; i++) { 
                for (j = 0; j &lt; 3; j++) { 
                    xxx = xx - 32 + (32*j);
                    yyy = yy - 32 + (32*i);
